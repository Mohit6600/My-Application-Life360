<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#8652FF"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Family"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Messages"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
       android:layout_marginTop="130dp">

        <ImageView
            android:id="@+id/msgImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_baseline_textsms_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:src="@drawable/ic_baseline_account_box_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="230dp"
            android:src="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msgImage"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Add Members to Send Messages"
            android:textColor="#1D093B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text9"
            android:layout_centerInParent="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:text="At least one member needs to join your Circle to be able to chat."
            android:textAlignment="center"
            android:textColor="#D71D093B"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/text10"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_corner"
            android:text="Add a New Member"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>



</RelativeLayout>