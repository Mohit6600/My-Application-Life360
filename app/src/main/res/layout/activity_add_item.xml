<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/dynamicImage"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    />
    <LinearLayout
        android:id="@+id/layout18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamicImage"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Find your stuff"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Put Tiles on important things like keys, wallets, and bikes to see them on your Life360 map"
            android:textColor="#E6000000"
            android:textSize="18sp" />


    </LinearLayout>


    <Button
        android:id="@+id/addTiles"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_corner"
        android:text="Add your Tiles"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:layout_below="@id/layout18"
        />

    <Button
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_corner"
        android:text="Shop Tiles"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/addTiles"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTiles"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="90dp"
        android:focusableInTouchMode="false"
        android:text="@string/learnMoreLink"
        android:textColorLink="#8652FF" />


</RelativeLayout>